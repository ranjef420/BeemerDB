export OILHEAD_ROOT="$HOME/Repos/BeemerDB"
export OILHEAD_DATA="$OILHEAD_ROOT/data"
export PART_DB="$OILHEAD_ROOT/db/OEM.duckdb"
export OEM_SQLITE="$OILHEAD_ROOT/db/OEM.sqlite"

# Path helpers
case ":$PATH:" in *":$OILHEAD_ROOT/bin:"*) ;; *) export PATH="$OILHEAD_ROOT/bin:$PATH" ;; esac
case ":$PATH:" in *":$OILHEAD_ROOT/tools/cli:"*) ;; *) export PATH="$OILHEAD_ROOT/tools/cli:$PATH" ;; esac

# OCR defaults
export TESSERACT_LANG="${TESSERACT_LANG:-eng}"
export OCR_DPI="${OCR_DPI:-300}"
export OCR_PARALLEL_JOBS="${OCR_PARALLEL_JOBS:-4}"

# Embeddings
export EMBEDDING_MODEL="${EMBEDDING_MODEL:-all-MiniLM-L6-v2}"
export EMBEDDING_DEVICE="${EMBEDDING_DEVICE:-cpu}"

echo "[BeemerDB] ROOT=$OILHEAD_ROOT DB=$(basename "$PART_DB") SQLITE=$(basename "$OEM_SQLITE")"